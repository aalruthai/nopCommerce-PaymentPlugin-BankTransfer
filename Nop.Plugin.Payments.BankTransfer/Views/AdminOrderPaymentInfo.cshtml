@inherits Nop.Web.Framework.Mvc.Razor.NopRazorPage<TModel>
@removeTagHelper Microsoft.AspNetCore.Mvc.TagHelpers.InputTagHelper, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Nop.Web.Framework
@model Nop.Plugin.Payments.BankTransfer.Models.PaymentDetailsModel
@using System.Text
@using Nop.Core
@using Nop.Core.Domain.Catalog
@using Nop.Core.Domain.Media
@using Nop.Services.Media
@using Nop.Web.Framework.TagHelpers.Shared
@using Nop.Plugin.Payments.BankTransfer
@inject IDownloadService downloadService
@{
    Layout = "";
}
<div id="order-payment-info" data-card-name="order-payment-info" class="card card-secondary card-outline">
    <div class="card-header with-border clearfix">
        <div class="card-title"><i class="fas fa-info"></i> @T("Plugins.Payment.BankTransfer.PaymentDetails")</div>
    </div>
    <div class="card-body">
        <div class="card card-default">
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="ReceiptDownloadUrl" />
                    </div>
                    <div class="col-md-9">
                        @if (!string.IsNullOrWhiteSpace(Model.ReceiptDownloadUrl))
                        {
                            <a href="@Model.ReceiptDownloadUrl" style="color: blue !important;">@T("Common.FileUploader.DownloadUploadedFile")</a>
                        }
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="RechargeCode" />
                    </div>
                    <div class="col-md-9">
                        <div class="form-text-row">@Model.RechargeCode</div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
